<Window x:Class="HINAS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HINAS"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="504"/>
            <ColumnDefinition Width="143"/> 
            <ColumnDefinition Width="953"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="694"></RowDefinition>
            <RowDefinition Height="206"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="images/BgMenu.png"/>
            </Border.Background>
            <Canvas>
                <Button Content="Планер путешествий" Width="401" Height="106" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="52" Canvas.Top="150" FontFamily="Marck Script"
FontSize="30"
FontWeight="Regular"
FontStyle="Oblique"
Background="Transparent" Foreground="#FFFBF4" BorderBrush="#FFFBF4" BorderThickness="5" Click="NavigateToPlaner_Click"></Button>
                <Image Source="images/Logo.png" Canvas.Left="205" Canvas.Top="74" Height="118" Width="94"></Image>
            </Canvas>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="images/Legend.png"/>
            </Border.Background>
        </Border>
        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="images/BgMapRes.png"></ImageBrush>
            </Border.Background>
        </Border>
        <Canvas>
            <ProgressBar Canvas.Left="782" Canvas.Top="743" Height="37" Width="655" 
Minimum="0" Maximum="100" Value="10" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#FFFBF4" BorderThickness="5" Foreground="#B77227" Background="#CBA961"/>
            <ProgressBar Canvas.Left="782" Canvas.Top="814" Height="37" Width="655" 
Minimum="0" Maximum="100" Value="10" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#FFFBF4" BorderThickness="5" Foreground="#6889A1" Background="#BED1D5"/>
        </Canvas>
        <Border BorderBrush="#FFFBF4" BorderThickness="5" Grid.Column="2" Grid.Row="1" Background="#E9F0DE" Margin="89,114,818,42" Width="46" Height="50">
            <Image Source="images/free-icon-water-drop.png" Height="32" Width="32"></Image>
        </Border>
        <Border BorderBrush="#FFFBF4" BorderThickness="5" Grid.Column="2" Grid.Row="1" Background="#E9F0DE" Margin="89,42,818,114" Width="46" Height="50">
            <Image Source="images/free-icon-canister.png" Height="32" Width="32"></Image>
        </Border>
    </Grid>
</Window>
