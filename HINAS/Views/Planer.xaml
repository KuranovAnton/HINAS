<Page x:Class="HINAS.Planer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HINAS"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="Planer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="590"/>
            <ColumnDefinition Width="423"/>
            <ColumnDefinition Width="587"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="165"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="265"></RowDefinition>
            <RowDefinition Height="420"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Background="#E9F0DE" BorderBrush="#BED1D5" BorderThickness="20"/>
        <Canvas>
            <Image Source="images/PlanerLogo.png" Width="894" Height="145" HorizontalAlignment="Center" Canvas.Top="20" VerticalAlignment="Top"></Image>
        </Canvas>
        <Border Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="580,0,10,0">
            <Image Source="images/NameAndDate.png" Height="95" Margin="335,70,32,50" />
        </Border>
        <Border Background="Transparent" Height="35" Grid.Column="2" Margin="49,74,63,56" BorderBrush="#E9F0DE" BorderThickness="2" CornerRadius="7">
            <TextBox Background="Transparent" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

        <Border Background="Transparent" Height="35" Grid.Column="2" Margin="49,124,63,6" BorderBrush="#E9F0DE" BorderThickness="2" CornerRadius="7">
            <DatePicker Background="Transparent" 
                SelectedDate="{Binding TripDate, UpdateSourceTrigger=PropertyChanged}"
                BorderThickness="0" Margin="0,4,-1,-79"/>
        </Border>
        <Canvas Grid.Row="1" Grid.ColumnSpan="3">
            <Image Source="images/MarshTrue.png"  Width="1491" HorizontalAlignment="Left" Canvas.Right="75" VerticalAlignment="Center" Canvas.Top="3" Canvas.Left="55"></Image>
            <Border Background="Transparent" Height="35" Width="1347" Canvas.Left="190" Canvas.Top="8" 
        HorizontalAlignment="Left" VerticalAlignment="Center"  
        BorderBrush="#E9F0DE" BorderThickness="2" CornerRadius="7">
                <TextBox Background="Transparent" 
             Text="{Binding Route, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </Border>
        </Canvas>
        <Canvas Grid.Row="2" Grid.Column="0" Margin="65,5,2,361" Height="320.89" Grid.RowSpan="2">
            <Image Source="images/ClothesTrue.png" HorizontalAlignment="Left" VerticalAlignment="Center" Width="520" Height="321" Canvas.Left="-10"/>

            <TextBox TextWrapping="Wrap" 
             Text="{Binding LeftItemsText, UpdateSourceTrigger=PropertyChanged}"
             Canvas.Top="77" Width="242" Height="234" 
             HorizontalAlignment="Left" VerticalAlignment="Top" 
             Background="Transparent" />

            <TextBox TextWrapping="Wrap" 
             Text="{Binding RightItemsText, UpdateSourceTrigger=PropertyChanged}"
             Canvas.Top="77" Width="240" Height="234" 
             HorizontalAlignment="Left" VerticalAlignment="Center" 
             Canvas.Left="260" Background="Transparent" />
        </Canvas>
        <Canvas Grid.Row="3" Grid.Column="0" Margin="64,59,279,42">
            <Image Source="images/Events.png" Width="248" Height="319" Canvas.Top="6" 
           HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox Canvas.Left="5" TextWrapping="Wrap" 
             Text="{Binding Events, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             Canvas.Top="79" Width="239" Height="240" 
             HorizontalAlignment="Left" VerticalAlignment="Center" 
             Background="Transparent"/>
        </Canvas>
        <Canvas Grid.Row="3" Grid.Column="0" Margin="317,72,277,42">
            <Image Source="images/Reminders.png" Width="272" Height="317" 
           Canvas.Top="6" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBox HorizontalAlignment="Left" Grid.Row="3" TextWrapping="Wrap"
             Text="{Binding Reminders, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             VerticalAlignment="Top" Width="237" Height="236" 
             Canvas.Left="5" Canvas.Top="77" Background="Transparent"/>
        </Canvas>
        <Canvas Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Margin="-5,5,5,0">
            <Image Source="images/Check_List.png" Width="428" Height="655" 
           HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- Контейнер для списка -->
            <ItemsControl ItemsSource="{Binding CheckListItems}" 
              Width="380" Height="550"
              Canvas.Top="80" Canvas.Left="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <CheckBox IsChecked="{Binding Done, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Task}" 
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Width="320">
                                <TextBlock.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick"
                                      Command="{Binding DataContext.DeleteCheckListItemCommand, 
                                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                      CommandParameter="{Binding}"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBox Text="{Binding NewCheckListItem, UpdateSourceTrigger=PropertyChanged}"
             Width="380" Height="30"
             Canvas.Top="49" Canvas.Left="24"
             Background="Transparent" BorderBrush="#BED1D5" BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding AddCheckListItemCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Canvas>
        <Canvas Grid.Row="2" Grid.Column="3" Margin="0,0,0,0">
            <Image Source="images/Products.png" Width="522" Height="260" 
           HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center"/>

            <TextBox Canvas.Left="24" TextWrapping="Wrap"
             Text="{Binding Supplies, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             Canvas.Top="50" Width="494" Height="190" 
             HorizontalAlignment="Center" VerticalAlignment="Top" 
             Background="Transparent"/>
        </Canvas>
        <Canvas Grid.Row="3" Grid.Column="3">
            <Image Source="images/maintenance.png" Width="522" Height="395" 
           HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center"/>

            <TextBox Canvas.Left="26" TextWrapping="Wrap"
             Text="{Binding Maintenance, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             Canvas.Top="39" Width="487" HorizontalAlignment="Center" 
             VerticalAlignment="Top" Height="340" Background="Transparent"/>
        </Canvas>
        <Canvas>
            <Button Content="НА ГЛАВНУЮ" 
            Click="GoToMainWindow_Click"
            Grid.Column="2" Grid.Row="3"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Width="143" Height="35"
            FontSize="14"
            Background="#FF2196F3" Foreground="White"
            BorderThickness="0" Canvas.Left="1402" Canvas.Top="21" />
        </Canvas>
    </Grid>
</Page>